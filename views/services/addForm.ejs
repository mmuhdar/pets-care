<%- include("../partials/header.ejs") %> <%- include("../partials/navbar.ejs")
%>

<div class="d-flex justify-content-center">
  <h2 class="mb-5 mt-3">Add Service</h2>
</div>
<div class="row">
  <div class="col"></div>
  <div class="col">
    <form action="/services/add" method="POST">
      <div class="form-control">
        <div class="mb-3">
         <label for="name" class="form-label">Name</label>
         <input type="text" class="form-control" id="name" placeholder="Grooming" name="name">
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="text" class="form-control" id="price" placeholder="100000" name="price">
         </div>
         <div class="mb-3">
          <label for="imageUrl" class="form-label">Link Image</label>
          <input type="text" class="form-control" id="imageUrl" placeholder="http://google.com" name="imageUrl">
         </div>
        <div class="mb-3 d-flex justify-content-center">
          <button class="btn btn-primary me-3" type="submit">Submit</button>
          <a href="/" class="btn btn-danger">Cancel</a>
        </div>
      </div>
    </form>
  </div>
  <div class="col"></div>
</div>

<%- include("../partials/footer.ejs") %>
