<%- include("../partials/header.ejs") %> <%- include("../partials/navbar.ejs")
%>

<div class="d-flex justify-content-center">
  <h2 class="mb-5 mt-3">Choose your plan</h2>
</div>
<div class="row">
  <div class="col"></div>
  <div class="col">
    <form action="/pets/adding-more" method="POST">
      <div class="form-control">
        <div class="mb-3">
          <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="PetId">
            <option selected disabled>Select Pet</option>
            <% data.Pets.forEach(el => { %>
              <option value="<%= el.id %>"><%= el.name %></option>
            <% }) %>
          </select>
        </div>
        
        <div class="mb-3">
          <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="ServiceId">
            <option selected disabled>Select Service</option>
            <% services.forEach(el => { %>
              <option value="<%= el.id %>"><%= el.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="mb-3 d-flex justify-content-center">
          <button class="btn btn-primary me-3" type="submit">Submit</button>
          <a href="/" class="btn btn-danger">Cancel</a>
        </div>
      </div>
    </form>
  </div>
  <div class="col"></div>
</div>

<%- include("../partials/footer.ejs") %>
