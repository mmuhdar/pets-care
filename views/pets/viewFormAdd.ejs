<%- include("../partials/header.ejs") %> <%- include("../partials/navbar.ejs")
%>

<div class="flex justify-content-center">
  <div class="row">
    <div class="col">
      <div class="card">
        <img
          src="<%= data.imageUrl %>"
          class="card-img-top"
          alt="..."
        />
      </div>
    </div>
    <div class="col">
      <form action="/pets/add/<%= data.id %>" method="POST">
      <div class="form-control">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Garfield" name="name">
        </div>
        <div class="mb-3">
          <label for="type" class="form-label">Type</label>
          <input type="text" class="form-control" id="type" placeholder="Cat" name="type">
        </div>
        <div class="mb-3">
          <label for="weight" class="form-label">Weight</label>
          <input type="text" class="form-control" id="weight" placeholder="4" name="weight">
        </div>
        <div class="mb-3">
          <label for="race" class="form-label">Race</label>
          <input type="text" class="form-control" id="race" placeholder="British Shorthair" name="race">
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <button class="btn btn-primary me-3" type="submit">Submit</button>
          <a href="/" class="btn btn-danger">Cancel</a>
        </div>
      </div>
    </form>
    </div>
  </div>
</div>

<%- include("../partials/footer.ejs") %>
